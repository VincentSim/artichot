
<div>
  <div class="content">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active first"><a href="#you-follow" aria-controls="you-follow" role="tab" data-toggle="tab"><%= t('.you_follow') %></a></li>
          <li role="presentation"><a href="#likes" aria-controls="likes" role="tab" data-toggle="tab"><%= t('.you_like') %></a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="you-follow">
            <% if @sort_news.size == 0 %>
              <div class="card">
                <%= t ('.no_follow') %>
              </div>
            <% else %>
              <% @sort_news.each do |art_piece| %>
              <div class="card">
                <%= art_piece.title %> - <%= art_piece.created_at.strftime("%d/%m/%Y") %>
                <%= image_tag(art_piece.picture(:medium)) %>
              </div>
              <% end %>
            <% end %>
          </div>
          <div role="tabpanel" class="tab-pane" id="likes">
            <% if @likes.size == 0 %>
              <div class="card">
                <%= t ('.no_likes') %>
              </div>
            <% else %>
              <% @likes.each do |like| %>
              <div class="card">
                <%= like.art_piece.title %> - <%= like.art_piece.created_at.strftime("%d/%m/%Y") %>
                <%= image_tag(like.art_piece.picture(:medium)) %>
              </div>
              <%end%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>





