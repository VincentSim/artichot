
<div>
  <div class="content">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active first"><a href="#you-follow" aria-controls="you-follow" role="tab" data-toggle="tab"><%= t('.you_follow') %></a></li>
          <li role="presentation"><a href="#likes" aria-controls="likes" role="tab" data-toggle="tab"><%= t('.you_like') %></a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="you-follow">
            <% if @sort_news.size == 0 %>
              <div class="card">
                <%= t ('.no_follow') %>
              </div>
            <% else %>
              <% @sort_news.each do |news| %>
              <div class="card">
                <div class="row title">
                  <div class="col-xs-3 col-md-2">
                    <%= image_tag news.espace.user.put_picture(:thumb), class: "img-avatar" %>
                  </div>
                  <div class="col-xs-9 col-md-10 posted">
                    <%= link_to espace_path(news.espace) do %>
                     <%= news.espace.user.first_name %>
                     <%end%>
                     <%= t ('.posted') %>
                     <%= news.created_at.strftime("%d/%m/%Y") %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xs-12 text-center">
                    <%= image_tag(news.picture(:medium)) %>
                    <div class="title_art_piece">
                      <%= news.title %>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
            <% end %>
          </div>
          <div role="tabpanel" class="tab-pane" id="likes">
            <% if @likes.size == 0 %>
              <div class="card">
                <%= t ('.no_likes') %>
              </div>
            <% else %>
              <% @likes.each do |like| %>
              <div class="card">
                <div class="row title">
                  <div class="col-xs-3 col-md-2">
                    <%= image_tag like.art_piece.espace.user.put_picture(:thumb), class: "img-avatar" %>
                  </div>
                  <div class="col-xs-9 col-md-10 posted">
                    <%= link_to espace_path(like.art_piece.espace) do %>
                     <%= like.art_piece.espace.user.first_name %>
                     <%end%>
                     <%= t ('.posted') %>
                     <%= like.art_piece.created_at.strftime("%d/%m/%Y") %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xs-12 text-center">
                    <%= image_tag(like.art_piece.picture(:medium)) %>
                    <div class="title_art_piece">
                    <%= like.art_piece.title %>
                    </div>
                  </div>
                </div>
              </div>
              <%end%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>





