<div class="form-create">
  <header>
    <h1><%= t('.edit_my_espace') %></h1>
  </header>
  <section>
    <%= render 'form' %>
  </section>
  <div class= "text-center delete_espace_div">
    <%= link_to espace_path(@espace), method: :delete,title: t(".confirmation"),  data: { confirm: t('.AreYouSure') } do %>
